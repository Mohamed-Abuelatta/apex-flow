{# Template Layout #}
{% extends "layouts/base.njk" %}
{% block baseContent %}

    <!-- Carousel Start -->
    <div class="header-carousel owl-carousel">
        <div class="header-carousel-item">
            <img src="https://assets.inman.com/wp-content/uploads/2024/04/Backflip_SeriesA-1024x576.png" class="img-fluid w-100" alt="أكاديمية القمة للجمباز">
            <div class="carousel-caption">
                <div class="carousel-caption-content p-3" style="max-width: 900px;">
                    <h4 class="text-secondary text-uppercase sub-title fw-bold mb-4 wow fadeInUp" data-wow-delay="0.1s" style="letter-spacing: 3px;">مرحباً بكم</h4>
                    <h1 class="display-1 text-capitalize text-white mb-4 wow fadeInUp" data-wow-delay="0.3s">أكاديمية القمة <br /> جمباز - باركور - كاليس</h1>
                    <p class="fs-5 wow fadeInUp" data-wow-delay="0.5s">نقدم برامج تدريبية متخصصة في الجمباز والكاليسثينكس للأطفال والشباب، بإشراف نخبة من المدربين المحترفين في بيئة آمنة ومجهزة بأحدث المعدات
                    </p>
                    <div class="pt-2">
                        <a class="btn btn-primary rounded-pill text-white py-3 px-5 m-2 wow fadeInLeft" data-wow-delay="0.1s" href="/register">انضم الآن</a>
                        <a class="btn btn-secondary rounded-pill text-white py-3 px-5 m-2 wow fadeInRight" data-wow-delay="0.3s" href="/about">اقرأ المزيد</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-carousel-item">
            <img src="https://www.nerdfitness.com/wp-content/uploads/2019/01/parkour-in-action.png" class="img-fluid w-100" alt="تدريبات الجمباز">
            <div class="carousel-caption">
                <div class="carousel-caption-content p-3" style="max-width: 900px;">
                    <h4 class="text-secondary text-uppercase sub-title fw-bold mb-4" style="letter-spacing: 3px;">برامجنا المميزة</h4>
                    <h1 class="display-1 text-capitalize text-white mb-4">تدريبات احترافية <br /> لكل الاعمار</h1>
                    <p class="fs-5">نقدم مجموعة متنوعة من البرامج التدريبية التي تناسب جميع الأعمار والمستويات، من المبتدئين وحتى المحترفين</p>
                    <div class="pt-2">
                        <a class="btn btn-primary rounded-pill text-white py-3 px-5 m-2 wow fadeInLeft" data-wow-delay="0.1s" href="/programs">برامجنا</a>
                        <a class="btn btn-secondary rounded-pill text-white py-3 px-5 m-2 wow fadeInRight" data-wow-delay="0.3s" href="/contact">تواصل معنا</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-carousel-item">
            <img src="https://webp.mh.cdn.pxr.nl/news/2019/06/13/man-doing-a-flag-figure-part-of-his-calisthenics-royalty-free-image-644688124-1560420131.jpg?width=1800" class="img-fluid w-100" alt="تدريب خاص">
            <div class="carousel-caption">
                <div class="carousel-caption-content p-3" style="max-width: 900px;">
                    <h4 class="text-secondary text-uppercase sub-title fw-bold mb-4" style="letter-spacing: 3px;">تدريب شخصي</h4>
                    <h1 class="display-1 text-capitalize text-white mb-4">جلسات تدريب خاصة مع مدربين محترفين</h1>
                    <p class="fs-5">نوفر جلسات تدريب فردية مخصصة تناسب أهدافك وقدراتك، مع متابعة مستمرة لتطورك وتقدمك</p>
                    <div class="pt-2">
                        <a class="btn btn-primary rounded-pill text-white py-3 px-5 m-2 wow fadeInLeft" data-wow-delay="0.1s" href="/private-training">التدريب الخاص</a>
                        <a class="btn btn-secondary rounded-pill text-white py-3 px-5 m-2 wow fadeInRight" data-wow-delay="0.3s" href="/schedule">احجز موعدك</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->

    <!-- Banner Start -->
    <div class="container-fluid bg-secondary wow zoomInDown" data-wow-delay="0.1s">
        <div class="container">
            <div class="d-flex flex-column flex-lg-row align-items-center justify-content-center text-center p-5">
                <h1 class="me-4"><span class="fw-normal">انضم إلينا اليوم </span><span>واحصل على حصة تجريبية مجانية</span></h1>
                <a href="tel:+905523836514" class="text-white fw-bold fs-2"> <i class="bi bi-whatsapp me-1"></i> +90 552 383 6514</a>
            </div>
        </div>
    </div>
    <!-- Banner End -->

    <!-- Main Content Section -->
    {% block homeContent %}{% endblock %}

{% endblock %}