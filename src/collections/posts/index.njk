---
title: المدونة
breadcrumb:
- { label: "الرئيسية", url: "/" }
- { label: "المدونة", url: "/pages/posts/" }
permalink: "/pages/posts/"
eleventyExcludeFromCollections: true
---

{% block pageContent %}

<!-- Posts Grid Container -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <div class="row g-4">
            {% for post in collections.posts | reverse %}
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="{{ loop.index0 * 0.2 }}s">
                <div class="blog-item border rounded h-100">
                    <div class="position-relative">
                        <img src="{{ post.data.featured_image }}" class="img-fluid rounded-top w-100" alt="{{ post.data.title }}">
                        <div class="blog-date position-absolute py-1 px-2">{{ post.date | date("DD MMM YYYY") }}</div>
                    </div>
                    <div class="rounded-bottom text-end p-4">
                        <div class="mb-2 text-primary">
                            <small><i class="fa fa-user me-2"></i>{{ post.data.author }}</small>
                        </div>
                        <a href="{{ post.url }}" class="h4 d-block mb-3">{{ post.data.title }}</a>
                        <p class="mb-3">{{ post.data.description }}</p>
                        <a class="btn btn-primary rounded-pill text-white py-2 px-4" href="{{ post.url }}">إقرأ المزيد</a>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12 text-center">
                <p>لا توجد مقالات حالياً</p>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}